<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.nardilam.droidnose"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="nl.nardilam.droidnose.TimetableActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChooseDateActivity"
            android:label="Kies een datum" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.nardilam.droidnose.TimetableActivity" />
        </activity>
        <activity
            android:name=".StudentIdActivity"
            android:label="Nieuw studentnummer" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.nardilam.droidnose.TimetableActivity" />
        </activity>
    </application>

</manifest>